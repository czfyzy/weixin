<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1000"
        android:id="@+id/view_pager">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
         >

        <com.zengye.weixin.ChangeColorView
            android:id="@+id/icon1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:icon_image="@drawable/ic_menu_emoticons"
            app:text_size="13sp"
            app:text="微信"
            app:view_color="#51c20f" />

        <com.zengye.weixin.ChangeColorView
            android:layout_width="0dp"
            android:id="@+id/icon2"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:icon_image="@drawable/ic_menu_allfriends"
            app:text_size="13sp"
            app:text="通讯录"
            app:view_color="#51c20f" />

        <com.zengye.weixin.ChangeColorView
            android:id="@+id/icon3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:icon_image="@drawable/ic_menu_cc"
            app:text_size="13sp"
            app:text="发现"
            app:view_color="#51c20f" />

        <com.zengye.weixin.ChangeColorView
            android:id="@+id/icon4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:icon_image="@drawable/ic_menu_friendslist"
            app:text_size="13sp"
            app:text="列表"
            app:view_color="#51c20f" />
    </LinearLayout>
</LinearLayout>
